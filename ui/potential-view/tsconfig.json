{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "Common/*": ["src/common/*"],
      "Providers/*": ["src/providers/*"],
      "Components/*": ["src/components/*"],
      "Common": ["src/common"],
      "Providers": ["src/providers"],
      "Components": ["src/components"]
    },
    "jsx": "react",
    "sourceMap": true,
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "dom"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "webpack"]
}
